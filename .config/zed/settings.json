// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette
{
  // Расширения
  "auto_update_extensions": {},
  // Редактор
  "ui_font_size": 16,
  "buffer_font_size": 16,
  // "buffer_font_family": "JetBrainsMono Nerd Font",
  // "buffer_font_family": "Cascadia Code",
  "buffer_font_family": "Dank Mono",
  "relative_line_numbers": true,
  // Прокрутка
  "scrollbar": {
    "show": "never"
  },
  // Темы
  "theme": {
    "mode": "system",
    "light": "Tokyo Night",
    "dark": "One Dark"
  },
  // Автосохранение
  "autosave": {
    "after_delay": {
      "milliseconds": 10000
    }
  },
  "gutter": {
    "folds": false,
    "line_numbers": true
  },
  // Toolbar
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": true
  },
  // Чаты
  "collaboration_panel": {
    "button": false
  },
  "chat_panel": {
    "button": false
  },
  // Ассистенты
  "assistant": {
    "version": "2",
    "button": false
  },
  // Tab bar
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  // Терминал
  "terminal": {
    "button": false,
    "alternate_scroll": "off",
    "blinking": "on",
    "copy_on_select": false,
    "dock": "right",
    "font_family": "JetBrainsMono Nerd Font",
    "font_size": 15,
    "option_as_meta": true,
    "toolbar": {
      "title": true
    },
    "working_directory": "current_project_directory"
  },
  // Верхняя панель
  "tabs": {
    "file_icons": false,
    "git_status": false
  },
  // Tree bar
  "project_panel": {
    "default_width": 200,
    "indent_size": 15
  },
  // Подсказки
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true, // Выведение типов
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "inlayHints": {
    "maxLength": null,
    "lifetimeElisionHints": {
      "useParameterNames": true,
      "enable": "skip_trivial"
    },
    "closureReturnTypeHints": {
      "enable": "always"
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy" // rust-analyzer.check.command (default: "check")
        }
      }
    }
  },
  // Телеметрия
  "telemetry": {
    "diagnostics": true,
    "metrics": false
  },
  // Vim
  "vim_mode": true
}
